<%
/*
* Properties:
*  - Include: avatar, background, defaultBackground
*/
// getting the color value user inputed
import fs from 'fs'
const color = async function() {
    try {
        const db = await fs.readFile(
            `${__basedir}/data/${user}_data.json`,
            'utf-8'
        )
        return JSON.parse(db).color
    } catch {
        console.log(err)
    }
}
%>
<style>
<% if (typeof avatar !== 'undefined' && avatar) { %>
.avatar--image {
    background: url(<%= avatar %>);
}
<% } %>
<% if (background || typeof defaultBackground !== 'undefined') { %>
.background--image {
    background: linear-gradient(<%= color %>, transparent), url(<%= background || defaultBackground %>);
}
<% } %>
</style>
